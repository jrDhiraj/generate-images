<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search History</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Search History</h1>
        <a href="/" class="btn btn-primary mb-3">Go Back</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Prompt</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% history.forEach((entry, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= entry.input %></td>
                        <td>
                            <img src="/<%= entry.imageUrl %>" alt="Generated Image" style="width: 100px; height: auto;">
                        </td>
                        <td>
                            <!-- Delete Button -->
                            <form action="/history/delete/<%= entry._id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
            
        </table>
    </div>
</body>
</html>
